#!/bin/bash
# start
# start is a helper script that helps to get focused for the day
# DavyJ0nes 2016
 
DATE=$(date "+%d-%m-%Y %H:%M")
PREFIX="$HOME/checklists"

cp "$PREFIX/.start-template" "$PREFIX/start/start_checklist_$DATE"

sed -i.bak "s/^date/$DATE/" "$PREFIX/start/start_checklist_$DATE"
rm "$PREFIX/start/start_checklist_$DATE.bak"

vim "$PREFIX/start/start_checklist_$DATE"
