# General
yabai -m config layout bsp
yabai -m config window_placement second_child

# Padding
yabai -m config window_gap 10

# Mouse
yabai -m config mouse_follows_focus on

# App Config
yabai -m rule --add "^System Settings$" manage=off
yabai -m rule --add "^Calculator$" manage=off
yabai -m config external_bar all:32:0
yabai -m rule --add app="Keymapp.app" sticky=on layer=above manage=off

yabai -m rule --add title="ddterm" manage=off grid="9:1:0:0:1:2"
