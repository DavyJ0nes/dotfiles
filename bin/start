#!/bin/bash
# start
# start is a helper script that helps to get focused for the day
# DavyJ0nes 2016
 
DATE=$(date "+%d-%m-%Y %H:%M")

cp ~/Personal/checklists/.start-template ~/Personal/checklists/start/start_checklist_"$DATE"
sed -i.bak "s/^date/$DATE/" ~/Personal/checklists/start/start_checklist_"$DATE"
rm ~/Personal/checklists/start/start_checklist_"$DATE".bak
vi ~/Personal/checklists/start/start_checklist_"$DATE"
